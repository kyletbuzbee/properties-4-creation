{
  "ci": {
    "collect": {
      "url": [
        "${LH_BASE_URL:-http://localhost:3000}/",
        "${LH_BASE_URL:-http://localhost:3000}/properties",
        "${LH_BASE_URL:-http://localhost:3000}/contact",
        "${LH_BASE_URL:-http://localhost:3000}/about",
        "${LH_BASE_URL:-http://localhost:3000}/resources",
        "${LH_BASE_URL:-http://localhost:3000}/faq",
        "${LH_BASE_URL:-http://localhost:3000}/impact",
        "${LH_BASE_URL:-http://localhost:3000}/transparency",
        "${LH_BASE_URL:-http://localhost:3000}/privacy",
        "${LH_BASE_URL:-http://localhost:3000}/terms",
        "${LH_BASE_URL:-http://localhost:3000}/tyler-ranch-home",
        "${LH_BASE_URL:-http://localhost:3000}/longview-victorian",
        "${LH_BASE_URL:-http://localhost:3000}/jefferson-riverfront",
        "${LH_BASE_URL:-http://localhost:3000}/kemp-townhome",
        "${LH_BASE_URL:-http://localhost:3000}/marshall-historic-farm",
        "${LH_BASE_URL:-http://localhost:3000}/mineola-modern-studio"
      ],
      "numberOfRuns": 3,
      "settings": {
        "chromeFlags": '--no-sandbox --disable-dev-shm-usage',
        "staticDistDir": './dist',
        "throttlingMethod": 'devtools',
        "throttling": {
          "rttMs": 150,
          "throughputKbps": 1638.4,
          "cpuSlowdownMultiplier": 4
        }
      }
    },
    "assert": {
      "assertions": {
        'categories:performance': ['error', {"minScore": 0.9}],
        'categories:accessibility': ['error', {"minScore": 0.95}],
        'categories:best-practices': ['error', {"minScore": 0.9}],
        'categories:seo': ['error', {"minScore": 0.9}],
        'categories:pwa': ['warn', {"minScore": 0.8}],
        'first-contentful-paint': ['warn', {"maxNumericValue": 2000}],
        'largest-contentful-paint': ['warn', {"maxNumericValue": 2500}],
        'cumulative-layout-shift': ['warn', {"maxNumericValue": 0.1}],
        'total-blocking-time': ['warn', {"maxNumericValue": 200}],
        'speed-index': ['warn', {"maxNumericValue": 3000}],
        'server-response-time': ['warn', {"maxNumericValue": 800}],
        'mainthread-tasks': ['warn', {"maxNumericValue": 200}],
        'render-blocking-resources': ['warn', {"maxNumericValue": 0}]
      }
    },
    "upload": {
      "target": 'temporary-public-storage'
    }
  }
}
