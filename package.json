{
  "name": "properties-4-creations",
  "version": "2.0.0",
  "description": "Veteran & family housing website in East Texas",
  "main": "src/index.html",
  "scripts": {
    "dev": "npx @11ty/eleventy --serve",
    "build": "npx @11ty/eleventy && npm run minify && npm run strip-console",
    "build:prod": "npm run build",
    "minify": "postcss src/css/style.css -o _site/css/style.min.css && terser src/js/main.js -o _site/js/main.min.js",
    "strip-console": "node scripts/strip-console.js",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:watch": "vitest --watch",
    "test:security": "vitest tests/security/",
    "test:accessibility": "vitest tests/accessibility/",
    "test:performance": "vitest tests/performance/",
    "test:cross-browser": "vitest tests/cross-browser/",
    "test:service-worker": "vitest tests/service-worker/",
    "test:all": "vitest tests/",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "lint": "eslint src/js/**/*.js",
    "lint:fix": "eslint src/js/**/*.js --fix",
    "lighthouse": "lhci autorun",
    "security-audit": "npm audit",
    "format": "prettier --write \"src/**/*.{html,js,css,md}\"",
    "format:check": "prettier --check \"src/**/*.{html,js,css,md}\"",
    "bundle-size": "bundlewatch",
    "bundle-size:check": "bundlewatch --ci",
    "bundle-size:report": "bundlewatch --ci --json"
  },
  "devDependencies": {
    "@11ty/eleventy": "^2.0.1",
    "@lhci/cli": "^0.12.0",
    "@playwright/test": "^1.40.0",
    "@tailwindcss/forms": "^0.5.11",
    "@tailwindcss/typography": "^0.5.19",
    "@vitest/coverage-v8": "^4.0.16",
    "@vitest/ui": "^4.0.16",
    "autoprefixer": "^10.4.23",
    "axe-core": "^4.8.2",
    "bundlewatch": "^0.3.3",
    "cssnano": "^7.1.2",
    "eslint": "^8.50.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-jsdoc": "^46.8.2",
    "eslint-plugin-prefer-arrow": "^1.2.3",
    "happy-dom": "^12.0.0",
    "jsdom": "^23.0.1",
    "playwright": "^1.40.0",
    "postcss": "^8.5.6",
    "postcss-cli": "^11.0.0",
    "prettier": "^3.0.3",
    "terser": "^5.27.0",
    "vitest": "^4.0.16"
  },
  "keywords": [
    "housing",
    "veterans",
    "section8",
    "hud-vash",
    "accessibility",
    "wcag",
    "elevenjs"
  ],
  "author": "Properties 4 Creations",
  "license": "MIT",
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead",
    "not ie 11"
  ],
  "dependencies": {
    "@11ty/eleventy-img": "^6.0.4"
  }
}
